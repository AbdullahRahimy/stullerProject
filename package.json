{
  "name": "stuller-cypress-assessment",
  "version": "1.0.0",
  "description": "QA Automation Engineer Assessment - Cypress E2E Testing Framework for Stuller.com",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "test": "cypress run",
    "test:task1": "cypress run --spec cypress/e2e/task1-workflow.cy.js",
    "test:task2": "cypress run --spec cypress/e2e/task2-api-ui.cy.js",
    "test:task3": "cypress run --spec cypress/e2e/task3-debug.cy.js",
    "test:all": "cypress run --spec 'cypress/e2e/*.cy.js'",
    "test:headed": "cypress run --headed --spec 'cypress/e2e/*.cy.js'",
    "lint": "echo 'No linter configured'",
    "clean": "rimraf cypress/videos cypress/screenshots cypress/results"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "automation",
    "stuller",
    "qa"
  ],
  "author": "QA Automation Engineer",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.9.0",
    "mochawesome": "^7.1.3",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
